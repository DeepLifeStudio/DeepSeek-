{
  "manifest_version": 3,
  "name": "DeepSeek AI",
  "version": "1.0",
  "description": "DeepSeek AI Chrome Extension",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "commands",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.deepseek.com/*"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "Command+Shift+D",
        "chromeos": "Alt+Shift+D",
        "linux": "Alt+Shift+D",
        "windows": "Alt+Shift+D"
      },
      "description": "打开 DeepSeek AI 对话窗口"
    }
  }
}